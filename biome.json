{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noReExportAll": "error"
      },
      "style": {
        "noDefaultExport": "off",
        "noNegationElse": "error",
        "useConst": "off",
        "useExportType": "off",
        "useImportType": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "noConsole": "info",
        "noEmptyBlockStatements": "warn",
        "noSkippedTests": "error"
      },
      "a11y": {
        "useButtonType": "off"
      }
    }
  },
  "organizeImports": {},
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["./migrations/meta/**/*", "app/routes/atlas/lap.js"]
  }
}
